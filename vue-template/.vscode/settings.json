{
  // eslint 校验：主要校验语法错误
  "eslint.validate": ["javascript", "javascriptreact", "vue", "typescript", "typescriptreact"],
  // vscode 插件 prettier-code formatter : 保存时修复错误
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true, // 开启eslint修复
    "source.fixAll.stylelint": true // 开启styelint修复
  },
  // vscode：保存时格式化，这一步决定了是否在保存时执行格式化
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode" // 默认使用prettier格式化
}
